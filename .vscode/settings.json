{
  "latex-workshop.intellisense.unimathsymbols.enabled": true,
  // Set pdflatex as default recipe
  "latex-workshop.latex.recipe.default": "latexmk (pdflatex)",
  "latex-workshop.view.pdf.viewer": "tab",
  // Define compilation recipes
  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk (pdflatex)",
      "tools": ["pdflatexmk"]
    },
    {
      "name": "latexmk (xelatex)",
      "tools": ["xelatexmk"]
    },
    {
      "name": "latexmk (lualatex)",
      "tools": ["lualatexmk"]
    }
  ],
  // Define compilation tools
  "latex-workshop.latex.tools": [
    {
      "name": "pdflatexmk",
      "command": "latexmk",
      "args": [
        "-pdf",
        "-synctex=1",
        "-quiet",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-halt-on-error",
        "-shell-escape",
        "%DOC%"
      ]
    },
    {
      "name": "xelatexmk",
      "command": "latexmk",
      "args": [
        "-xelatex",
        "-synctex=1",
        "-quiet",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-halt-on-error",
        "-shell-escape",
        "%DOC%"
      ]
    },
    {
      "name": "lualatexmk",
      "command": "latexmk",
      "args": [
        "-lualatex",
        "-synctex=1",
        "-quiet",
        "-interaction=nonstopmode",
        "-file-line-error",
        "-halt-on-error",
        "-shell-escape",
        "%DOC%"
      ]
    }
  ],
  // Cleaning configuration
  "latex-workshop.latex.clean.fileTypes": [
    "*.aux",
    "*.bbl",
    "*.blg",
    "*.idx",
    "*.ind",
    "*.lof",
    "*.lot",
    "*.out",
    "*.toc",
    "*.acn",
    "*.acr",
    "*.alg",
    "*.glg",
    "*.glo",
    "*.gls",
    "*.ist",
    "*.fls",
    "*.log",
    "*.fdb_latexmk",
    "*.synctex.gz"
  ]
}
